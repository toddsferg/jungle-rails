<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>



      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>

          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <dt>Review</dt>
          <dd><%= %></dd>
        </dl>
      </div>
    </div>

  <!-- if there is a current user then create this form to create comments-->

    <% if current_user %>
      <div class="review-form">
        <h4> Review this product:</h4>
          <%= form_for [@product, Review.new] do |f| %>
            <div>
              <%= f.label :rating %>
              <%= f.select :rating, (1..5) %>
            </div>
             <div>
              <%= f.label 'Review:' %>
              <%= f.text_field :description, class: 'form-control' %>
            </div>
            <div>
              <%= f.submit "Create" %>
            </div>

      </div>
    <% end %>


        <% end %>
    <div class="well">
          <% if @product.reviews.count > 0 %>
            <h4>Product Reviews:</h4>
            <% @product.reviews.reverse_each do |review| %>

              <div>
                <h4><%= review.user.name %></h4>
                <div><%= review.rating %>/5</div>
                <div><%= review.description %></div>
                <div>Posted: <%= time_ago_in_words review.created_at%></div>
              </div>
              <% if current_user %>
               <% if current_user.name == review.user.name %>
                <%= link_to fa_icon('trash'), [review.product, review], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>




  </article>

</section>
